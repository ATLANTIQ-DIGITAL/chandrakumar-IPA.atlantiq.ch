<?php
/**
* Implements hook_views_pre_render().
*/
function my_module_views_pre_render(ViewExecutable $view) {
if ($view->id() == 'your_view_id' && $view->current_display == 'team_ansicht') {
// Sortieren der Ergebnisse basierend auf dem Gewichtungsfeld.
usort($view->result, function ($a, $b) {
return $a->_entity->get('field_weight')->value <=> $b->_entity->get('field_weight')->value;
});
}
}
