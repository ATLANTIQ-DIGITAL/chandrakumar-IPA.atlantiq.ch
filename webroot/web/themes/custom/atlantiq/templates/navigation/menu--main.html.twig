{#
/**
 * @file
 * Theme override to display a menu.
 *
 * Available variables:
 * - menu_name: The machine name of the menu.
 * - items: A nested list of menu items. Each menu item contains:
 *   - attributes: HTML attributes for the menu item.
 *   - below: The menu item child items.
 *   - title: The menu link title.
 *   - url: The menu link url, instance of \Drupal\Core\Url
 *   - localized_options: Menu link localized options.
 *   - is_expanded: TRUE if the link has visible children within the current
 *     menu tree.
 *   - is_collapsed: TRUE if the link has children within the current menu tree
 *     that are not currently visible.
 *   - in_active_trail: TRUE if the link is in the active trail.
 */
#}

{% import _self as menus %}

{{ menus.menu_links(items, attributes, 0, menu_name, '') }}

{% macro menu_links(items, attributes, menu_level, menu_name, menu_active) %}
  {% import _self as menus %}

  {%
    set main_classes  = [
    'menu__' ~ menu_name|clean_class,
    'navbar-nav',
    'mb-2',
    'mb-xl-0',
  ]
  %}

  {%
    set submenu_classes  = [
    'dropdown-menu',
    menu_active != '' ? menu_active,
  ]
  %}

  {% if items %}
    {% if menu_level == 0 %}
<ul{{ attributes.addClass(main_classes) }}>
  {% else %}
  <ul{{ attributes.removeClass(main_classes).addClass(submenu_classes) }}>
    {% endif %}
    {% for item in items %}
      {%
        set item_classes = [
        item.in_active_trail ? 'is-active',
        menu_level == 0 ? 'nav-item',
        menu_level == 0 and item.below ? 'dropdown',
        menu_level != 0 and item.below ? 'dropdown-menu',
        'menu-level-' ~ menu_level,
      ]
      %}

      {% if item.url.isRouted() %}
        {% set route_name = item.url.getRouteName() %}
      {% endif %}

      {%
        set link_classes = [
        item.in_active_trail ? 'active',
        item.below ? 'dropdown-toggle',
        menu_level == 0 ? 'nav-link',
        menu_level != 0 ? 'dropdown-item',
        route_name == '<nolink>' ? 'disabled',
      ]
      %}

      <li{{ item.attributes.addClass(item_classes) }}>

        {% set internal_routing = '' %}
        {% if item.url.isRouted() %}
          {% set internal_routing = 'data-drupal-link-system-path=' ~ item.url.getInternalPath() %}
        {% endif %}

        {% set link_title = item.url.getOption('attributes').title %}

        {% if item.below %}
          {% if route_name == '<nolink>' %}
            <a href="{{ item.url }}" title="{{ link_title }}" {{ item.attributes.addClass(link_classes).removeClass(item_classes) }} {{ internal_routing }} data-bs-toggle="dropdown" aria-expanded="false">{{ item.title }}</a>
          {% else %}
            <a href="{{ item.url }}" {{ item.attributes.addClass(link_classes).removeClass(item_classes) }} {{ internal_routing }} data-bs-toggle="dropdown" aria-expanded="false">{{ item.title }}</a>
          {% endif %}
          {% if item.in_active_trail %}
            {% set menu_active = 'is-active' %}
          {% else %}
            {% set menu_active = '' %}
          {% endif %}
          {{ menus.menu_links(item.below, attributes, menu_level + 1, menu_name, menu_active) }}
        {% else %}
          <a href="{{ item.url }}" {{ item.attributes.addClass(link_classes).removeClass(item_classes) }} {{ internal_routing }}>{{ item.title }}</a>
        {% endif %}

      </li>
    {% endfor %}
    <!-- Icon Onpage Navigation -->
    <li class="nav-item menu-level-0 icon-item">
      <a href="#logo-atlantiq" class="nav-link">
        <img src="{{ '/' ~ active_theme_path() ~ '/themes/custom/atlantiq/img/icons/caret-circle-up-thin.svg' }}" alt="â†‘">
      </a>
    </li>
  </ul>
  {% endif %}
  {% endmacro %}
