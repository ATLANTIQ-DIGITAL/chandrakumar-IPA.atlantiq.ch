{#
@file
Theme implementation for a paragraph type with a title and description.
#}

<div{{ attributes.addClass('paragraph', 'paragraph--type--block-text-mitte') }}>
  {% set titel_id = content.field_titelbeschriftung_mitte|render|striptags|trim %}
  {% if titel_id %}
    <h1 id="{{ titel_id|lower|replace({' ': '-', '_': '-', '/': '-', '\\': '-'}) }}">
      {{ content.field_titelbeschriftung_mitte }}
    </h1>
  {% else %}
    <h1>
      {{ content.field_titelbeschriftung_mitte }}
    </h1>
  {% endif %}

  {% if content.field_beschreibungstext_mitte %}
    <div class="description">
      {{ content.field_beschreibungstext_mitte }}
    </div>
  {% endif %}
</div>
